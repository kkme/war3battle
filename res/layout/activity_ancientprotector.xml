<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eee"
        android:orientation="vertical" >
        
        <LinearLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="45dp"
  			android:id="@+id/title" 
  			android:background="@drawable/title_bar"
  			android:gravity="center_horizontal|center_vertical"  >  
      		<TextView 
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="远古保护者"
        		android:textSize="20sp"		
				android:textColor="#ffffff" />       
			</LinearLayout>
<ScrollView 

    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:background="#eee"
>
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    >
 
 <ImageView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_gravity="center"
     android:layout_marginBottom="10dp"
     android:layout_marginTop="10dp"
     android:gravity="left"
     android:src="@drawable/ancientprotector" >

      </ImageView>

<TextView  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"    
            android:text="介绍"  
            android:gravity="left"
             android:textColor="#0000CC"
            android:textSize="18sp"   
            ></TextView>  
<TextView android:textColor="#000"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"    
            android:text="        远古保护者是暗夜精灵的防御建筑。可以攻击地面或者空中单位。同其他古树一样，战争古树可以通过 吃树来恢复生命值。 "  
            android:gravity="left"  
           ></TextView>  

<TextView  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"    
            android:text="数据"  
            android:gravity="left"
            android:textColor="#0000CC"
            android:layout_marginTop="10dp"
            android:textSize="18sp"  
         ></TextView>  
       
      <TextView android:textColor="#000"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"    
            android:text="费用:135/80 "  
            android:gravity="left" 
            android:layout_span="1" 
           ></TextView>

    
      <TextView android:textColor="#000"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"    
            android:text="生命值:600"  
            android:gravity="left" 
            android:layout_span="1" 
           ></TextView>
     
      <TextView android:textColor="#000"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"    
            android:text="护甲:1/3"  
            android:gravity="left" 
            android:layout_span="1" 
           ></TextView>

     
      <TextView android:textColor="#000"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"    
            android:text="护甲类型:城甲 "  
            android:gravity="left" 
            android:layout_span="1" 
           ></TextView>

 
      
      <TextView android:textColor="#000"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"    
            android:text="视野：90/60 "  
            android:gravity="left" 
            android:layout_span="1" 
           ></TextView>

 
     
      <TextView android:textColor="#000"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"    
            android:text="移动速度：190/80"  
            android:gravity="left" 
            android:layout_span="1" 
           ></TextView>
            <TextView android:textColor="#000"  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"    
            android:text="建造时间：180"  
            android:gravity="left" 
            android:layout_span="1" 
           ></TextView>
<TextView  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"    
            android:text="坐下时的攻击状态"  
            android:gravity="left"
            android:textColor="#ff0000"
         ></TextView> 
		<TextView android:textColor="#000"  
		            android:layout_width="wrap_content"  
		            android:layout_height="wrap_content"    
		            android:text="伤害：45-54"  
		            android:gravity="left" 
		            android:layout_span="1" 
		           ></TextView>
		<TextView android:textColor="#000"  
		            android:layout_width="wrap_content"  
		            android:layout_height="wrap_content"    
		            android:text="攻击类型：穿刺"  
		            android:gravity="left" 
		            android:layout_span="1" 
		           ></TextView>
      		<TextView android:textColor="#000"  
		            android:layout_width="wrap_content"  
		            android:layout_height="wrap_content"    
		            android:text="全范围伤害：2.5"  
		            android:gravity="left" 
		            android:layout_span="1" 
		           ></TextView>

      <TextView android:textColor="#000"  
		            android:layout_width="wrap_content"  
		            android:layout_height="wrap_content"    
		            android:text="3/20伤害范围：7.5"  
		            android:gravity="left" 
		            android:layout_span="1" 
		           ></TextView>
      <TextView android:textColor="#000"  
		            android:layout_width="wrap_content"  
		            android:layout_height="wrap_content"    
		            android:text="1/20伤害范围：12.5"  
		            android:gravity="left" 
		            android:layout_span="1" 
		           ></TextView>
      		<TextView android:textColor="#000"  
		            android:layout_width="wrap_content"  
		            android:layout_height="wrap_content"    
		            android:text="最大攻击距离：70"  
		            android:gravity="left" 
		            android:layout_span="1" 
		           ></TextView>

      <TextView android:textColor="#000"  
		            android:layout_width="wrap_content"  
		            android:layout_height="wrap_content"    
		            android:text="攻击间隔：2"  
		            android:gravity="left" 
		            android:layout_span="1" 
		           ></TextView>
<TextView  
            android:layout_width="wrap_content"  
            android:layout_height="wrap_content"    
            android:text="拔起时的攻击状态"  
            android:gravity="left"
            android:textColor="#ff0000"
         ></TextView> 
<TextView android:textColor="#000"  
		            android:layout_width="wrap_content"  
		            android:layout_height="wrap_content"    
		            android:text="伤害：26-33"  
		            android:gravity="left" 
		            android:layout_span="1" 
		           ></TextView>
      <TextView android:textColor="#000"  
		            android:layout_width="wrap_content"  
		            android:layout_height="wrap_content"    
		            android:text="攻击类型：普通"  
		            android:gravity="left" 
		            android:layout_span="1" 
		           ></TextView>
      		<TextView android:textColor="#000"  
		            android:layout_width="wrap_content"  
		            android:layout_height="wrap_content"    
		            android:text="攻击范围：近战"  
		            android:gravity="left" 
		            android:layout_span="1" 
		           ></TextView>

      <TextView android:textColor="#000"  
		            android:layout_width="wrap_content"  
		            android:layout_height="wrap_content"    
		            android:text="攻击间隔：1.5"  
		            android:gravity="left" 
		            android:layout_span="1" 
		           ></TextView>






</LinearLayout>
</ScrollView>
</LinearLayout>
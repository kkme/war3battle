<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#eee"
        android:orientation="vertical" >

<LinearLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="45dp"
  			android:id="@+id/title" 
  			android:background="@drawable/title_bar"
  			android:gravity="center_horizontal|center_vertical"  >  
      		<TextView
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="精灵族单位"
        		android:textSize="20sp"		
				android:textColor="#ffffff" />       
			</LinearLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<TableLayout  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent"  
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:shrinkColumns="*"  
    android:stretchColumns="*">    
   <TableRow  
        android:layout_height="wrap_content"  
        android:layout_width="match_parent"  
        android:gravity="center_horizontal">  
        <TextView  
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"  
            android:textStyle="bold"  
            android:typeface="serif"  
            android:textSize="18sp"  
            android:text="英雄"  
            android:textColor="#000"
            android:gravity="left"  
            android:layout_span="4"></TextView>  
    </TableRow> 
    <TableRow
        android:layout_height="wrap_content"  
        android:layout_width="match_parent">        
   <Button   
        android:id="@+id/button_demonhunter"  
        android:text="  恶魔猎手  "
        android:drawableTop="@drawable/demonhunter_n"
		android:onClick="demonhunter"
        android:background="#eee"
     /> 
      <Button   
        android:id="@+id/button_keepergrove"   
        android:text="丛林守护者"
        android:drawableTop="@drawable/keepergrove_n"
		android:onClick="keepergrove"
        android:background="#eee"
     />

     <Button   
        android:id="@+id/button_priestess"  
        android:text="      白虎      "
        android:drawableTop="@drawable/priestess_n"
		android:onClick="priestess"
        android:background="#eee"
     /> 
        <Button   
        android:id="@+id/button_warden"  
        android:text="    守望者    "
        android:drawableTop="@drawable/warden_n"
		android:onClick="warden"
        android:background="#eee"
     />  

</TableRow>
    <TableRow
                android:id="@+id/tableRow2"  
        android:layout_height="wrap_content"  
        android:layout_width="match_parent" >
<TextView
            android:id="@+id/textView9"  
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"  
            android:textStyle="bold"  
            android:typeface="serif"  
            android:textSize="18sp"  
            android:textColor="#000"
            android:text="单位" 
            android:gravity="left"  
            android:layout_span="4" />
    </TableRow>
    <TableRow>
      <Button   
        android:id="@+id/button_wisp"  
        android:text="小精灵"
        android:drawableTop="@drawable/wisp"
        android:onClick="wisp"
        android:background="#eee"
     /> 
  
             <Button   
        android:id="@+id/button_archer"  
        android:text="弓箭手"
        android:drawableTop="@drawable/archer"
        android:onClick="archer"
        android:background="#eee"
     />   
     <Button   
        android:id="@+id/button_huntress"  
        android:text="女猎手"
        android:drawableTop="@drawable/huntress"
        android:onClick="huntress"
        android:background="#eee"
     />  
     <Button   
        android:id="@+id/button_glaivethrower"  
        android:text="投刃车"
        android:drawableTop="@drawable/glaivethrower"
        android:onClick="glaivethrower"
        android:background="#eee"
     />    
            

</TableRow><TableRow        android:id="@+id/tableRow3"  
        android:layout_height="wrap_content"  
        android:layout_width="match_parent" >
    <Button   
        android:id="@+id/button_dryad"  
        android:text="小鹿"
        android:drawableTop="@drawable/dryad"
        android:onClick="dryad"
        android:background="#eee"
     /> 
         <Button   
        android:id="@+id/button_docdruidform"  
        android:text="利爪德鲁伊"
        android:drawableTop="@drawable/docdruidform"
        android:onClick="docdruidform"
        android:background="#eee"
     />   
         <Button   
        android:id="@+id/button_mountaingiant"  
        android:text="山岭"
        android:drawableTop="@drawable/mountaingiant"
        android:onClick="mountaingiant"
        android:background="#eee"
     />   
         <Button   
        android:id="@+id/button_hippogryph"  
        android:text="角鹰兽"
        android:drawableTop="@drawable/hippogryph"
        android:onClick="hippogryph"
        android:background="#eee"
     />   

    
    </TableRow><TableRow
                android:id="@+id/tableRow4"  
        android:layout_height="wrap_content"  
        android:layout_width="match_parent" >
             <Button   
        android:id="@+id/button_druidtalon"  
        android:text="猛禽德鲁伊"
        android:drawableTop="@drawable/druidtalon"
        android:onClick="druidtalon"
        android:background="#eee"
     />     
                 <Button   
        android:id="@+id/button_faeriedragon"  
        android:text="精灵龙"
        android:drawableTop="@drawable/faeriedragon"
        android:onClick="faeriedragon"
        android:background="#eee"
     />  
              <Button   
        android:id="@+id/button_chimaera"  
        android:text="奇美拉"
        android:drawableTop="@drawable/chimaera"
        android:onClick="chimaera"
        android:background="#eee"
     /> 

     </TableRow>
     <TableRow
                android:id="@+id/tableRow2"  
        android:layout_height="wrap_content"  
        android:layout_width="match_parent" >
<TextView
            android:id="@+id/textView9"  
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"  
            android:textStyle="bold"  
            android:typeface="serif"  
            android:textSize="18sp"  
            android:textColor="#000"
            android:text="建筑" 
            android:gravity="left"  
            android:layout_span="4" />
    </TableRow>
    <TableRow>
      <Button   
        android:id="@+id/button_wisp"  
        android:text="  战争古树  "
        android:drawableTop="@drawable/ancientofwar"
        android:onClick="ancientofwar"
        android:background="#eee"
     /> 
  
             <Button   
        android:id="@+id/button_archer"  
        android:text="  生命之树  "
        android:drawableTop="@drawable/treeoflife"
        android:onClick="treeoflife"
        android:background="#eee"
     />   
     <Button   
        android:id="@+id/button_huntress"  
        android:text="  月亮井  "
        android:drawableTop="@drawable/moonwell"
        android:onClick="moonwell"
        android:background="#eee"
     />  
     <Button   
        android:id="@+id/button_glaivethrower"  
        android:text="  长者祭坛  "
        android:drawableTop="@drawable/altarofelders"
        android:onClick="altarofelders"
        android:background="#eee"
     />    
            

</TableRow><TableRow        android:id="@+id/tableRow3"  
        android:layout_height="wrap_content"  
        android:layout_width="match_parent" >
    <Button   
        android:id="@+id/button_dryad"  
        android:text="猎手大厅"
        android:drawableTop="@drawable/huntershall"
        android:onClick="huntershall"
        android:background="#eee"
     /> 
         <Button   
        android:id="@+id/button_docdruidform"  
        android:text="远古守护者"
        android:drawableTop="@drawable/ancientprotector"
        android:onClick="ancientprotector"
        android:background="#eee"
     />   
         <Button   
        android:id="@+id/button_mountaingiant"  
        android:text="远古之树"
        android:drawableTop="@drawable/treeofages"
        android:onClick="treeofages"
        android:background="#eee"
     />   
         <Button   
        android:id="@+id/button_hippogryph"  
        android:text="风之古树"
        android:drawableTop="@drawable/ancientofwind"
        android:onClick="ancientofwind"
        android:background="#eee"
     />   

    
    </TableRow><TableRow
                android:id="@+id/tableRow4"  
        android:layout_height="wrap_content"  
        android:layout_width="match_parent" >
             <Button   
        android:id="@+id/button_druidtalon"  
        android:text="知识古树"
        android:drawableTop="@drawable/ancientoflore"
        android:onClick="ancientoflore"
        android:background="#eee"
     />     
                 <Button   
        android:id="@+id/button_faeriedragon"  
        android:text="永恒之树"
        android:drawableTop="@drawable/treeofeternity"
        android:onClick="treeofeternity"
        android:background="#eee"
     />  
              <Button   
        android:id="@+id/button_chimaera"  
        android:text="奇美拉栖木"
        android:drawableTop="@drawable/chimaeraroost"
        android:onClick="chimaeraroost"
        android:background="#eee"
     /> 

     </TableRow>  
</TableLayout>
</ScrollView>
</LinearLayout>

        android:id="@+id/button_witchdoctor"  
        android:text="风暴祭坛"
        android:drawableTop="@drawable/altarofstorms"
        android:onClick="altarofstorms"
        android:background="#eee"
     /> 
         <Button   
        android:id="@+id/button_spiritwalker"  
        android:text="  瞭望塔  "
        android:drawableTop="@drawable/watchtower"
        android:onClick="watchtower"
        android:background="#eee"
     />   
         <Button   
        android:id="@+id/button_raider"  
        android:text="    要塞    "
        android:drawableTop="@drawable/stronghold"
        android:onClick="stronghold"
        android:background="#eee"
     />   
         <Button   
        android:id="@+id/button_kodobeast"  
        android:text="灵魂归宿"

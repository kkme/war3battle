        android:background="#eee"
     />   

    
    </TableRow><TableRow
                android:id="@+id/tableRow4"  
        android:layout_height="wrap_content"  
        android:layout_width="match_parent" >
             <Button   
        android:id="@+id/button_wyvernrider"  
        android:text="    兽栏    "
        android:drawableTop="@drawable/beastiary"
        android:onClick="beastiary"
        android:background="#eee"
     />     


              <Button   
        android:id="@+id/button_demolisher"  
        android:text="    堡垒    "
        android:drawableTop="@drawable/fortress"
        android:onClick="fortress"
        android:background="#eee"
     />  
      <Button   
        android:id="@+id/button_tauren"  
        android:text="牛头人图腾"
        android:drawableTop="@drawable/taurentotem"
        android:onClick="taurentotem"
        android:background="#eee"
     /> </TableRow> 
</TableLayout>
</ScrollView>
</LinearLayout>

        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="兽族VS兽族"
        android:gravity="center|center_horizontal|center_vertical"
